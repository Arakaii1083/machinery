#!/usr/bin/ruby

require "erb"

@template_path = File.expand_path("../layout.html.erb", __FILE__)
@fragment_path = File.expand_path("../generator/machinery.1.html_fragment", __FILE__)
@output_path = File.expand_path("../generator/manual.html", __FILE__)

def man_html_fragment
  File.read(@fragment_path)
end

erb = ERB.new(File.read(@template_path))

File.open(@output_path, "w") do |f|
  f.print(erb.result)
end
