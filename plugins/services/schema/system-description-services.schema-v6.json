{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "required": [
    "_attributes",
    "_elements"
  ],
  "properties": {
    "_attributes": {
      "type": "object",
      "required": [
        "init_system"
      ],
      "properties": {
        "init_system": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "_elements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "state"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "state": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}

