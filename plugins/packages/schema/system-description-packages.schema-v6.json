{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "_attributes",
    "_elements"
  ],
  "properties": {
    "_attributes": {
      "type": "object",
      "required": [
        "package_system"
      ],
      "properties": {
        "package_system": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "_elements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "version",
          "release",
          "arch",
          "vendor",
          "checksum"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "minLength": 1
          },
          "release": {
            "type": "string"
          },
          "arch": {
            "type": "string",
            "minLength": 1
          },
          "vendor": {
            "type": "string"
          },
          "checksum": {
            "type": "string",
            "pattern": "^[a-f0-9]+$"
          }
        }
      }
    }
  }
}
